                        <Label x:Name="biologia_gp_eidiko" Text="Βιολογία Γ.Π." Style="{StaticResource eid_math_label}"/>
                        <Label x:Name="mathimatika_eidiko" Text="Μαθηματικά" Style="{StaticResource eid_math_label}"/>
                        <Label x:Name="biologia_kateuthinsis_eidiko" Text="Βιολογία Κατεύθυνσης" Style="{StaticResource eid_math_label}"/>
                        <Label x:Name="ksenes_glosses_eidiko" Text="Ξένη Γλώσσα" Style="{StaticResource eid_math_label}"/>
