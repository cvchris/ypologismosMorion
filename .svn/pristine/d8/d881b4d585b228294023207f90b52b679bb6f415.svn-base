                        </ListView.ItemTemplate>
                    </ListView>
                <!--</Frame>-->
                <Button x:Name="click" Clicked="Handle_Clicked" Text="Εισαγωγη" TextColor="White" BackgroundColor="#1E90FF" IsVisible="false" Margin="0,10,0,0" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label x:Name="moriatext" Text="Μόρια:" IsVisible="false"/>
                    <Label x:Name="apotelesma"  HorizontalOptions="Center"  IsVisible="false" />
